@model MvcApplication1.Models.Property

@{
    ViewBag.Title = "Edit";
}
@section headermenu
    { 
@Html.ActionLink("Back", "Menu", "ExpertSystem", new { id = Model.ExpertSystemId }, new {@class="MainMenuPart" })
}
<h2>Edit property</h2>

    @using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Property</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <h3>Values: </h3>
        <table class="mainexpsystable">
             <tr>
              <td><input class="text-box single-line" id="newvalname" name="newvalname" type="text" value="" /></td>
               <td> 
                  <button type="submit" name="action" value="AddValue">Add Value</button>
               </td>
            </tr>
         @foreach (var val in Model.Val)
        { <tr>
           <th>
               @val.Mean
           </th> 
            <td>
               @Html.ActionLink("Delete", "DeleteValue", "Property",new{valueid=val.Id},null)
            </td>
          </tr>
        }

         </table>


        <p>
            <input type="submit" name="action" value="Save" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}